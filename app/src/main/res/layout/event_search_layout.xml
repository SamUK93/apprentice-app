<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <!-- Search box -->
    <android.support.v7.widget.SearchView
        android:id="@+id/eventSearchBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

    </android.support.v7.widget.SearchView>


    <!-- Filter section -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/filterSection"
        android:weightSum="2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <!-- Tags -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tagsSection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventGeneralCustomLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/filter_general_custom_text"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Interests / Location -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/interestsLocationSection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/interestsLocationLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/filter_by_interests_location_label_text"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/skillSuggestedEventsSection"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/suggestedEventsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/skill_suggested_events_label_text"
            android:textAlignment="center"
            android:textSize="23dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>