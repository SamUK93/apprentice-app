<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/logInTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Enter your details"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textStyle="bold" />


        <!-- Name -->
        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Enter your name..."
            android:textSize="11dp" />


        <!-- Description -->
        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/description_label_text"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Enter your description..."
            android:textSize="11dp" />


        <!-- Capgemini Info -->
        <TextView
            android:id="@+id/capgeminiInfoSectionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Capgemini Info"
            android:textSize="18dp"
            android:textStyle="bold" />

        <!-- Email -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/capgemini_email_label_text"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Enter your email..."
            android:textSize="11dp" />


        <!-- Base Location -->
        <TextView
            android:id="@+id/baseLocationLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/capgemini_base_location_label_text"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/baseLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Enter your base location..."
            android:textSize="11dp" />


        <!-- Grade -->
        <TextView
            android:id="@+id/gradeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/capgemini_info_grade_label_text"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/gradeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Enter your grade..."
            android:inputType="number"
            android:textSize="11dp" />


        <!-- Job Title -->
        <TextView
            android:id="@+id/jobTitleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/capgemini_info_job_title_label_text"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/jobTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Enter your job title..."
            android:textSize="11dp" />


        <!-- Join Date -->
        <TextView
            android:id="@+id/joinDateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/capgemini_info_join_date_label_text"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/joinDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Enter your join date..."
            android:textSize="11dp" />


        <!-- Create Account Button -->
        <Button
            android:id="@+id/createAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/create_account_button_text" />


    </LinearLayout>
</ScrollView>